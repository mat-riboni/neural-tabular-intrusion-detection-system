{
  "paths": {
    "dataset_path": "./resources/dataset/NF-UNSW-NB15-v3.csv",
    "output_dir": "./src/model"
  },
  "data_columns": {
    "comment": "Configurazione di test: Baseline + Feature di Ritrasmissione e Finestra TCP.",

    "numerical_cols": [
      "IN_BYTES",
      "OUT_BYTES",
      "IN_PKTS",
      "OUT_PKTS",
      "FLOW_DURATION_MILLISECONDS",
      "RETRANSMITTED_IN_BYTES",
      "RETRANSMITTED_IN_PKTS",
      "RETRANSMITTED_OUT_BYTES",
      "RETRANSMITTED_OUT_PKTS",
      "TCP_WIN_MAX_IN",
      "TCP_WIN_MAX_OUT"
    ],
    "categorical_cols": [
      "PROTOCOL"
    ],

    "removed_features_info": {
      "reason": "These features were excluded to prevent data leakage and to build a more robust and generalizable model. They have been identified as potential 'leakers' or non-behavioral features.",
      "features": [
        {
          "group": "Dataset Artifacts with Extreme Correlation",
          "list": [
            "MAX_TTL",
            "MIN_TTL"
          ]
        },
        {
          "group": "High-Cardinality Identifiers (cause memorization, not learning)",
          "list": [
            "IPV4_SRC_ADDR",
            "IPV4_DST_ADDR",
            "L4_SRC_PORT",
            "L4_DST_PORT",
            "DNS_QUERY_ID"
          ]
        },
        {
          "group": "Absolute Timestamps (tie the model to a specific point in time)",
          "list": [
            "FLOW_START_MILLISECONDS",
            "FLOW_END_MILLISECONDS"
          ]
        },
        {
          "group": "Post-Event Information or Data Collection Artifacts",
          "list": [
            "FTP_COMMAND_RET_CODE",
            "DNS_TTL_ANSWER"
          ]
        }
      ]
    },

    "target_column": "Label",
    "target_category_column": "Attack",
    "benign_label": 0
  },
  "training_settings": {
    "random_state": 42,
    "early_stopping_patience": 20,
    "virtual_batch_size": 128
  },
  "hyperparameters": {
    "small": {
      "n_d": 8, "n_a": 8, "n_steps": 3, "gamma": 1.3, "lambda_sparse": 0.001,
      "cat_emb_dim": 1, "lr": 0.02, "weight_decay": 1e-05,
      "batch_size": 1024, "max_epochs": 50
    },
    "medium": {
      "n_d": 16, "n_a": 16, "n_steps": 4, "gamma": 1.5, "lambda_sparse": 0.0001,
      "cat_emb_dim": 2, "lr": 0.02, "weight_decay": 1e-05,
      "batch_size": 1024, "max_epochs": 100
    },
    "large": {
      "n_d": 32, "n_a": 32, "n_steps": 5, "gamma": 1.5, "lambda_sparse": 1e-05,
      "cat_emb_dim": 4, "lr": 0.01, "weight_decay": 1e-06,
      "batch_size": 512, "max_epochs": 150
    }
  }
}